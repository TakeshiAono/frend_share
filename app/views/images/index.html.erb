<%= link_to "ログアウト", new_session_path%>
<h1><%= @current_user.name %>のマイページです</h1>

<%= link_to "投稿する", new_picture_path  %>
<table class = "image-table">
  <tr>
    <th><%= '投稿者' %></th>
    <th><%= :coment %></th>
    <th><%= :image %></th>
    <th><%= :updated_at %></th>
    <th><%= :created_at %></th>
    <th colspan="3"><%= :詳細 %></th>
  </tr>
  <% recode_count = 0 %>
  <% @pictures.each do |picture| %>
    <% recode_count += 1 %>
    <tr>
      <td class = "recode_<%= recode_count %>"><%= picture.user.name%></td>
      <td class = "recode_<%= recode_count %>"><%= picture[:coment]%></td>
      <td class = "recode_<%= recode_count %>"><%= picture[:image]%></td>
      <td class = "recode_<%= recode_count %>"><%= picture[:created_at]%></td>
      <td class = "recode_<%= recode_count %>"><%= picture[:updated_at]%></td>
      <td class = "recode_<%= recode_count %>"><%= link_to "編集", edit_picture_path(picture.id)%></td>
      <td class = "recode_<%= recode_count %>"><%= link_to "詳細表示", picture_path(picture.id)%></td>
      <td class = "recode_<%= recode_count %>"><%= link_to "削除", picture_path(picture.id), method: :delete %></td>
    </tr>
  <% end %>
</table>