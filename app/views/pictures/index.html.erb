<%= link_to "ログアウト", new_session_path%>
<h1><%= @current_user.name %>のマイページです</h1>
<%= link_to "投稿する", new_picture_path  %>
  <table>
    <tr>
      <th><%= '投稿者' %></th>
      <th><%= :coment %></th>
      <th><%= :image %></th>
      <th><%= :updated_at %></th>
      <th><%= :created_at %></th>
      <th colspan="3"><%= :詳細 %></th>
    </tr>
  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.user.name%></td>
      <td><%= picture[:coment]%></td>
      <td><%= picture[:image]%></td>
      <td><%= picture[:created_at]%></td>
      <td><%= picture[:updated_at]%></td>
      <td><%= link_to "編集", edit_picture_path(picture.id)%></td>
      <td><%= link_to "詳細表示", picture_path(picture.id)%></td>
      <td><%= link_to "削除", picture_path(picture.id), method: :delete %></td>
    </tr>
  <% end %>
  </table>
